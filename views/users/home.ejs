
<% include('../layout/header.ejs') %>

<h1 style="text-align: center; font-family: Arial, sans-serif; color: #333;">Welcome, <%= user.name %>! This is the home page!</h1>

<div style="width: 90%; max-width: 600px; margin: 0 auto; padding: 20px; background-color: #fff; border-radius: 8px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
        <tr>
            <td style="padding: 10px; text-align: center; border-bottom: 1px solid #ddd;">
                <img src="userImages/<%= user.image %>" alt="<%= user.image %>" style="border-radius: 50%; max-width: 100%; height: auto;" width="110" height="120">
            </td>
        </tr>
        <tr>
            <td style="padding: 10px; font-weight: bold; border-bottom: 1px solid #ddd;">Email</td>
            <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= user.email %></td>
        </tr>
        <tr>
            <td style="padding: 10px; font-weight: bold; border-bottom: 1px solid #ddd;">Mobile</td>
            <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= user.mobile %></td>
        </tr>
        <tr>
            <td style="padding: 10px; font-weight: bold; border-bottom: 1px solid #ddd;">Verified</td>
            <td style="padding: 10px;">Yes</td>
        </tr>
    </table>

    <a href="/edit?id=<%= user._id %>" style="display: inline-block; padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px; font-size: 16px; margin-right: 10px;">Edit Profile</a>
    <a href="/logout" style="display: inline-block; padding: 10px 20px; background-color: #dc3545; color: white; text-decoration: none; border-radius: 5px; font-size: 16px;">Logout</a>
</div>

<% include('../layout/footer.ejs') %>

<!-- Inline CSS for responsiveness -->
<style>
    @media (max-width: 768px) {
        h1 {
            font-size: 24px;
        }
        .container {
            width: 95%;
        }
        table {
            font-size: 14px;
        }
        a {
            font-size: 14px;
        }
    }
    @media (max-width: 480px) {
        h1 {
            font-size: 20px;
        }
        .container {
            width: 100%;
            padding: 10px;
        }
        table {
            font-size: 12px;
        }
        img {
            width: 80px;
            height: 90px;
        }
        a {
            font-size: 12px;
            padding: 8px 15px;
        }
    }
</style>

