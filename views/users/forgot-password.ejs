<% include('../layout/header.ejs') %>

<div style="width: 90%; max-width: 500px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); text-align: center;">
    <h1 style="font-family: Arial, sans-serif; color: #333;">Forgot Password</h1>
    
    <form action="" method="post" style="display: flex; flex-direction: column; align-items: center;">
        <input type="password" name="password" placeholder="New Password" required style="width: 100%; padding: 10px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;">
        <input type="hidden" name="user_id" value="<%= user_id %>">
        
        <input type="submit" value="Reset Password" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;">
    </form>
</div>

<% include('../layout/footer.ejs') %>

<!-- Responsive Styling -->
<style>
    @media (max-width: 768px) {
        div {
            width: 95%;
        }
        form input {
            font-size: 14px;
        }
    }
    @media (max-width: 480px) {
        div {
            width: 100%;
            padding: 10px;
        }
        form input {
            font-size: 12px;
            padding: 8px;
        }
        h1 {
            font-size: 20px;
        }
    }
</style>


